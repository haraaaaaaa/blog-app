<%- include("includes/head.ejs") %>
<link rel="stylesheet" href="/css/list.css">
</head>
<body>
    <%- include("includes/navbar.ejs") %>
    <div class="list">
    <h1 class="list__header">List of blogs</h1>
    <% if (posts.length === 0) { %>
     <h1>There are no products.</h1>
    <% } else { %>
        <ul class="list__list">
        <% for(const post of posts) { %>
            <%- include("includes/blog.ejs", {post}) %>
        <% } %>
        </ul>
    <% }%>
    </div>
</body>
</html>