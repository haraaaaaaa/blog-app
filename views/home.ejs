<%- include("includes/head.ejs") %>
<link rel="stylesheet" href="/css/list.css">
</head>
<body>
    <%- include("includes/navbar.ejs") %>
    <div class="list">
    <h1 class="list__header">List Of Blogs</h1>
    <% if (blogs.length === 0) { %>
     <h1 class="list__list">There are no blogs.</h1>
    <% } else { %>
        <ul class="list__list">
        <% for(const blog of blogs) { %>
            <%- include("includes/blog.ejs", {blog}) %>
        <% } %>
        </ul>
    <% }%>
    </div>
</body>
</html>